<h2>New Grocery</h2>

<form class="add-grocery--form" {{action 'createGrocery' on="submit"}}>
  <label>
    Name
    {{input class="spec-input-name" value=name}}
  </label>
  <label>
    Quantity
    {{input class="spec-input-quantity" value=quantity}}
  </label>
  <label>
    Notes
    {{textarea class="spec-textarea-notes" value=notes}}
  </label>
  <button class="add-grocery--submit">Submit</button>
</form>
