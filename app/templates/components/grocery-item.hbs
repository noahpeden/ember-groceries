<h3>{{grocery.name}}</h3>

{{#if grocery.quantity}}
  <p class="grocery-item--quantity">Quantity: {{grocery.quantity}}</p>
{{/if}}

{{#if grocery.notes}}
  <p class="grocery-item--notes">{{grocery.notes}}</p>
{{/if}}

<ul class="grocery-item--flags">
  <li class="grocery-item--flags">Purchased: {{grocery.purchased}}</li>
  <li class="grocery-item--flags">Starred: {{grocery.starred}}</li>
</ul>

<div class="grocery-item--buttons">
  <button {{action 'purchase'}}>Purchase</button>
  <button {{action 'star'}}>Star</button>
  <button {{action 'remove'}}>Remove</button>
</div>
